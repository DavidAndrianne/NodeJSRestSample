extends layout

block content
  form(method='post', action='/markers/create', class='form-horizontal')
    div(class='form group')
      label(for='lat', class='control-label col-sm-2') lat 
        a(href='https://www.doogal.co.uk/LatLong.php') ?
      div(class='col-sm-10')
        input(type='text', name='lat', placeholder='50.8333', class='form-control')
      label(for='lng', class='control-label col-sm-2') lng
        a(href='https://www.doogal.co.uk/LatLong.php') ?
      div(class='col-sm-10')
        input(type='text', name='lng', placeholder='4.0333', class='form-control')
    div(class='form group')
      label(for='title', class='control-label col-sm-2') title
      div(class='col-sm-10')
        input(type='text', name='title', placeholder="Joe's hotdog stand", class='form-control')
    div(class='form group')
      label(for='type', class='control-label col-sm-2') type
      div(class='col-sm-10')
        label street
        input(type='radio' name='type' value='street' checked='true')
        label stand
        input(type='radio' name='type' value='stand')
        label building
        input(type='radio' name='type' value='building')
    div(class='form group')
      label(for='layers', class='control-label col-sm-2') layers
      div(class='col-sm-10')
        div.checkbox
          label
            input(type='checkbox', value='Food', name ='layers', checked=true)
            span Food
        div.checkbox
          label 
            input(type='checkbox', value='Drink', name ='layers')
            span Drink
        div.checkbox
          label
            input(type='checkbox', value='Entertainment', name ='layers')
            span Entertainment
        div.checkbox
          label 
            input(type='checkbox', value='Transport', name ='layers')
            span Transport
        div.checkbox
          label 
            input(type='checkbox', value='Toilet', name ='layers')
            span Toilet
    div(class='form group')
      div(class='col-sm-8')
        input(type='submit', value='Submit', class='btn btn-default')